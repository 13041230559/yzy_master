<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@drawable/portrait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:padding="@dimen/dp_1"
            android:id="@+id/iamge_head"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            />

        <ImageView
            android:id="@+id/iamge_grade"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_alignBottom="@+id/iamge_head"
            android:layout_alignEnd="@+id/iamge_head"
            android:src="@mipmap/v4"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_weight="1"
        android:paddingLeft="@dimen/dp_10"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:layout_weight="1"
            android:id="@+id/txt_name"
            android:text="金钟大JP"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_weight="1"
            android:id="@+id/txt_fans"
            android:text="粉丝9999 关注9999"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/iamge_like"
        android:src="@mipmap/icon_like_add"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_18"
        android:layout_gravity="center"/>
</LinearLayout>