<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/include_head_title"/>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smart_layout"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:layout_weight="1"
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/liner_release_commit"
        android:paddingRight="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <EditText
            android:paddingLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_gravity="center"
            android:textColorHint="@color/c6"
            android:textColor="@color/c3"
            android:layout_weight="1"
            android:gravity="center|left"
            android:background="@drawable/edit_backshape_new"
            android:hint="我想说的是......"
            android:id="@+id/edit_content"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
        <ImageView
            android:visibility="gone"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_gravity="center"
            android:id="@+id/iamge_add"
            android:src="@mipmap/icon_yu_add_yzy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_gravity="center"
            android:id="@+id/txt_send"
            android:paddingRight="@dimen/dp_20"
            android:paddingLeft="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5"
            android:textColor="@color/white"
            android:background="@drawable/code_circular_backround"
            android:text="发送"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <TextView
            android:id="@+id/txt_comment_lick"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginStart="90dp"
            android:drawableLeft="@mipmap/icon_say_yzy"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:text="评论"
            android:textColor="@color/c3"
            android:textSize="@dimen/sp_15"/>

        <TextView
            android:id="@+id/txt_good_lick"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginEnd="84dp"
            android:drawableLeft="@mipmap/icon_zan_grey_yzy"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:text="2"
            android:textColor="@color/c3"
            android:textSize="@dimen/sp_15"/>
    </RelativeLayout>

</LinearLayout>