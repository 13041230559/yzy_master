<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">
<include layout="@layout/include_head_title"></include>

<LinearLayout
    android:layout_marginRight="@dimen/dp_15"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginTop="@dimen/dp_32"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/liner_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="left|center"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/icon_home_me_a_selected_yzy"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"/>
        <EditText
            android:id="@+id/edit_name"
            android:layout_gravity="center"
            android:text=""
            android:hint="请输入认证昵称"
            android:textColorHint="@color/c9"
            android:textSize="@dimen/sp_14"
            android:background="@null"
            android:textColor="@color/txtcolor"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"/>

        </LinearLayout>


        <View
            android:layout_marginTop="@dimen/dp_1"
            android:background="@color/fafafa"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"/>

        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="@color/c6"
            android:text="1-20个字,可由英文，数字组成"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="@color/c6"
            android:text="注,请确认好昵称，提交后不能修改"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
   <LinearLayout
       android:visibility="gone"
       android:id="@+id/liner_phone"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <ImageView
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_gravity="left|center"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/icon_home_me_a_selected_yzy"
           />
        <TextView
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:id="@+id/cy_number"
            android:text="中国+86"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:textColor="#1d1b1b"
            android:layout_height="match_parent"/>
        <EditText
            android:layout_weight="1"
            android:id="@+id/edit_phone"
            android:layout_marginRight="@dimen/dp_22"
            android:layout_gravity="center"
            android:text="13041230559"
            android:inputType="phone"
            android:textColorHint="@color/black"
            android:hint="@string/please_phone_mail"
            android:textSize="@dimen/sp_14"
            android:background="@null"
            android:textColor="@color/txtcolor"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"/>
    </LinearLayout>
    <View
        android:layout_marginTop="@dimen/dp_1"
        android:background="@color/fafafa"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/liner_code"
        android:layout_marginTop="@dimen/dp_8"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49">
        <ImageView
            android:layout_width="23dp"
            android:layout_height="17dp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/icon_log_text_yzy"/>
        <EditText
            android:layout_weight="1"
            android:id="@+id/edit_code"
            android:layout_marginRight="@dimen/dp_22"
            android:layout_gravity="center"
            android:text=""
            android:textColorHint="@color/black"
            android:hint="@string/pleasecode"
            android:textSize="@dimen/sp_14"
            android:background="@null"
            android:textColor="@color/txtcolor"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"/>

        <TextView
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/txt_code"
            android:background="@drawable/save_code"
            android:textColor="@color/white"
            android:text="获取验证码"
            android:textColorHint="@color/black"
            android:gravity="center"
            android:textSize="@dimen/sp_12"
            android:layout_gravity="center"
            android:layout_width="@dimen/dp_85"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <View
        android:layout_marginTop="@dimen/dp_1"
        android:background="@color/fafafa"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>
   </LinearLayout>
</LinearLayout>
    
