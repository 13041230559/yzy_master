<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/liner_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <RelativeLayout
            android:id="@+id/rl_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main_color"
            android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:visibility="gone"
                android:id="@+id/image_close"
                android:padding="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@mipmap/icon_back_white_yzy" />
            <LinearLayout
                android:padding="5dp"
                android:layout_marginLeft="@dimen/dp_15"
                android:id="@+id/liner_homesearch"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:layout_weight="1"
                android:background="@drawable/homesearch_shape"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/icon_search_grey_yzy" />
                <EditText
                    android:cursorVisible="false"
                    android:background="@color/transparent"
                    android:id="@+id/txt_search"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:lines="1"
                    android:imeOptions="actionSearch"
                    android:singleLine="true"
                    android:maxLength="15"
                    android:paddingLeft="@dimen/dp_8"
                    android:textColorHighlight="@color/white"
                    android:textColorHint="@color/g6"
                    android:hint="@string/searchshop"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/cleartxt_iamge"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/nav_qx_unchecked" />
            </LinearLayout>
            <TextView
                android:padding="5dp"
                android:id="@+id/right_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.1"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="12dp"
                android:visibility="gone"
                />
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="@dimen/dp_15"
                android:id="@+id/right_iamge"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/home_icon_messsage_yzy" />

        </LinearLayout>
        </RelativeLayout>
        <android.support.design.widget.TabLayout
            android:visibility="gone"
            android:id="@+id/top_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            app:tabIndicatorColor="@color/white"
            app:tabSelectedTextColor="@color/mian_color"
            app:tabTextColor="@color/c3"
            />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>