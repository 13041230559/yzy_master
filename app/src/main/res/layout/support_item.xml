<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical" android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_4"
        android:background="@color/color_fa"
        ></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/iamge_find"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_187"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/huodong_biaoqian_yzy"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/white"
                android:id="@+id/txt_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center"
                android:text="12456"
                android:textSize="@dimen/sp_12"/>

        </LinearLayout>

   <!--     <ImageView
            android:id="@+id/iamge_type1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/ic_launcher"/>-->
    </RelativeLayout>
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/iamge_type"
            android:src="@mipmap/icon_startrace_assistance_yzy"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"/>
        <TextView
            android:id="@+id/txt_sm"
            android:text="EXO"
            android:textSize="@dimen/sp_14"
            android:maxLines="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/c3"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>