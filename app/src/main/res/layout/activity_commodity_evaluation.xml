<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/include_head_title"/>
    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iamge_shop"
                android:src="@mipmap/default_bj"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"/>
                 <TextView
                     android:text="升级福利"
                     android:layout_marginLeft="@dimen/dp_10"
                     android:layout_gravity="center"
                     android:id="@+id/txt_shop_name"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>
        </LinearLayout>

        <EditText
            android:layout_marginTop="@dimen/dp_20"
            android:hint="宝贝入怀的心情开心吧~快说说您的心得,和你一样好品味的他们肯定一直在等待你的经验哟~"
            android:id="@+id/edit_content"
            android:gravity="top"
            android:background="@null"
            android:textSize="@dimen/sp_12"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70"/>
        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
          <LinearLayout
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <TextView
                  android:layout_marginTop="@dimen/dp_10"
                  android:text="发布评论"
                  android:textSize="@dimen/sp_15"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
              <TextView
                  android:textColor="@color/c3"
                  android:layout_marginLeft="@dimen/dp_10"
                  android:textSize="@dimen/dp_10"
                  android:layout_marginTop="@dimen/dp_10"
                  android:text="评论成功100%可得娱豆哟"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
          </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:layout_marginRight="@dimen/dp_20"
                android:orientation="vertical"
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@mipmap/img_views_love_normal_yzy"
                android:id="@+id/iamge_very_good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
                <TextView
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/txt_very_good"
                    android:text="非常满意"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_marginRight="@dimen/dp_20"
                android:orientation="vertical"
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@mipmap/img_views_like_normal_yzy"
                    android:id="@+id/iamge_good"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/txt_good"
                    android:text="满意"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@mipmap/img_views_cry_normal_yzy"
                    android:id="@+id/iamge_no_good"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/txt_no_good"
                    android:text="不满意"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
           <!-- <ImageView
                android:layout_marginRight="@dimen/dp_20"
                android:layout_weight="1"
                android:src="@mipmap/default_bj"
                android:id="@+id/iamge_good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_weight="1"
                android:src="@mipmap/default_bj"
                android:id="@+id/iamge_no_good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>-->
        </LinearLayout>


    </LinearLayout>
</LinearLayout>