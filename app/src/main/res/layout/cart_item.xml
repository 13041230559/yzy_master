<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:paddingTop="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_12"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <CheckBox
        android:padding="@dimen/dp_15"
        android:id="@+id/store_checkBox"
        android:visibility="visible"
        android:gravity="center"
        android:layout_gravity="center"
        android:minHeight="48dp"
        android:button="@null"
        android:drawableLeft="@drawable/checkbox_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/cart_iamge"
        android:src="@mipmap/ic_launcher"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_120"
        />
    <LinearLayout
        android:layout_marginLeft="@dimen/dp_15"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
        android:text="娱自营 想要让产品能够像呼吸一样自然，动的理解"
        android:id="@+id/txt_title"
        android:textSize="@dimen/sp_14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="@dimen/dp_8"
            android:text="娱自营 想要让产品能够像呼吸一样自然，动的理解"
            android:id="@+id/txt_subtitle"
            android:textSize="@dimen/sp_12"
            android:gravity="left"
            android:textColor="#999999"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_55"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/txt_z_price"
                    android:text="￥1550000"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/ff8282"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txt_y_price"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="￥1550000"
                    android:textSize="@dimen/sp_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>