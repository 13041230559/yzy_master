<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white" android:paddingBottom="@dimen/dp_10"
              android:layout_width="match_parent"
              android:layout_height="@dimen/dp_55">
    <LinearLayout
        android:id="@+id/liner_view"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <View
        android:background="@color/f5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>
    <View
        android:background="@color/fafafa"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"/>
    <View
        android:background="@color/f5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_weight="1"
        android:padding="1dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/store_checkBox"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:minWidth="32dp"
            android:minHeight="48dp"
            android:background="@null"
            android:button="@null"
            android:drawableLeft="@drawable/checkbox_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/c3"
            android:drawablePadding="5dp"
            android:textSize="@dimen/sp_16"
            android:text="小马的店铺"
            android:layout_marginTop="5dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/store_checkBox"
            android:id="@+id/store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <!-- <Button
         android:background="@color/transparent"
         android:textColor="@color/c3"
         android:id="@+id/store_edit"
         android:layout_centerVertical="true"
         android:layout_alignParentRight="true"
         android:text="编辑"
         android:textSize="16sp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" />-->

</LinearLayout>