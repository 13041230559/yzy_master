<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
<include layout="@layout/include_head_title"/>
    <LinearLayout
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_32"
        android:orientation="vertical"
        android:id="@+id/liner_nickname"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70">
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">
            <ImageView
                android:layout_gravity="left|center"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@mipmap/icon_home_me_a_selected_yzy"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"/>
            <EditText
                android:id="@+id/edit_name"
                android:layout_gravity="center"
                android:text=""
                android:hint="请输入用户名"
                android:textColorHint="@color/c9"
                android:textSize="@dimen/sp_14"
                android:background="@null"
                android:textColor="@color/txtcolor"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"/>
        </LinearLayout>
        <View
            android:layout_marginTop="@dimen/dp_1"
            android:background="@color/fafafa"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"/>

        <TextView
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="@color/c9"
            android:text="*一直娱将有秩序的维护您的唯一美名"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</LinearLayout>