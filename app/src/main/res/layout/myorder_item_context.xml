<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:background="@color/white"
              android:paddingTop="@dimen/dp_8"
              android:paddingBottom="@dimen/dp_8"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
   <ImageView
       android:id="@+id/iamge_shop"
       android:src="@mipmap/ic_launcher"
       android:layout_width="@dimen/dp_100"
       android:layout_height="@dimen/dp_100"/>
    <LinearLayout
        android:layout_marginLeft="@dimen/dp_15"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <TextView
            android:layout_marginBottom="@dimen/dp_15"
            android:textSize="@dimen/sp_14"
            android:id="@+id/txt_title"
            android:textColor="@color/c3"
            android:text="大吉大利晚上吃鸡"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginRight="@dimen/dp_15"
                android:layout_weight="1"
                android:textColor="@color/c9"
                android:layout_marginBottom="@dimen/dp_15"
                android:textSize="@dimen/sp_12"
                android:text="黑色 XL 130-150斤"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_discount_pirce"
                    android:textColor="@color/c3"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:textSize="@dimen/sp_12"
                    android:text="￥4800.00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txt_cost_pirce"
                    android:text="￥4800.00"
                    android:textColor="@color/c9"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:textSize="@dimen/sp_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txt_shop_number"
                    android:text="x1"
                    android:gravity="right"
                    android:textColor="@color/c9"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:textSize="@dimen/sp_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>