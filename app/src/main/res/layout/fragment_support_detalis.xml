<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.lzy.widget.PullZoomView
            android:layout_weight="1"
            android:id="@+id/pzv"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <include layout="@layout/support_detalis_header"/>
                <com.idolmedia.yzy.view.popwindow.ObservableScrollView
                    android:layout_width="match_parent"
                    android:id="@id/ss_content"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:padding="@dimen/dp_15"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_marginBottom="@dimen/dp_15"
                                android:id="@+id/txt_shop_name"
                                android:textSize="@dimen/sp_14"
                                android:textColor="#161515"
                                android:maxLines="2"
                                android:text=""
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:id="@+id/txt_price_section"
                                        android:text=""
                                        android:textSize="@dimen/sp_18"
                                        android:textColor="@color/ed3d3d"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:id="@+id/txt_sell"
                                        android:text=""
                                        android:textSize="@dimen/sp_12"
                                        android:textColor="@color/c9"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/text_liner_support"
                                android:orientation="vertical"
                                android:paddingRight="@dimen/dp_15"
                                android:paddingLeft="@dimen/dp_15"
                                android:paddingTop="@dimen/dp_15"
                                android:background="@color/fafafa"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="完成度"
                                    android:textColor="@color/txtcolor"
                                    android:textSize="@dimen/sp_18"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:gravity="center"
                                    android:id="@+id/text_fb"
                                    android:layout_marginBottom="@dimen/dp_8"
                                    android:textColor="@color/g6"
                                    android:textSize="15sp"
                                    android:text=""
                                    android:drawableBottom="@mipmap/icon_gogo_yzy"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <ProgressBar
                                    android:id="@+id/progressbar"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="5dp"
                                    android:layout_gravity="center"
                                    android:max="100"
                                    android:progress="0"
                                    android:progressDrawable="@drawable/bar_color"/>
                                <LinearLayout
                                    android:layout_marginTop="@dimen/dp_8"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:text="0%"
                                        android:textColor="@color/c3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:layout_weight="1"
                                        android:textColor="@color/c3"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:text="100%"
                                        android:textColor="@color/c3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <LinearLayout
                                        android:layout_weight="1"
                                        android:layout_gravity="center"
                                        android:orientation="vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/dp_80">
                                        <TextView
                                            android:id="@+id/txt_ycje"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/dp_15"
                                            android:text=""
                                            android:textColor="@color/fea94e"
                                            android:textSize="18sp"/>
                                        <TextView
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/dp_8"
                                            android:textColor="@color/g6"
                                            android:text="@string/Has_raised_money"
                                            android:textSize="14sp"/>

                                    </LinearLayout>
                                    <View
                                        android:layout_width="2dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/white0"/>
                                    <LinearLayout
                                        android:layout_weight="1"
                                        android:orientation="vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/dp_80">
                                        <TextView
                                            android:id="@+id/txt_mbje"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/dp_15"
                                            android:text=""
                                            android:textColor="@color/fc4f4f"
                                            android:textSize="18sp"/>
                                        <TextView
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/dp_8"
                                            android:text="@string/Raise_money"
                                            android:textColor="@color/g6"
                                            android:textSize="14sp"/>

                                    </LinearLayout>

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="@dimen/dp_5"
                                android:background="@drawable/shape_support"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_44">
                                <ImageView
                                    android:layout_gravity="center"
                                    android:layout_marginRight="@dimen/dp_15"
                                    android:layout_marginLeft="@dimen/dp_18"
                                    android:src="@mipmap/icon_details_sponsors_yzy"
                                    android:layout_width="@dimen/dp_22"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:id="@+id/txt_initiator"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="@string/Initiator"
                                    android:textSize="@dimen/sp_13"
                                    android:textColor="@color/c6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <View
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:id="@+id/txt_initiator_name"
                                    android:layout_marginRight="@dimen/dp_9"
                                    android:text=""
                                    android:textSize="@dimen/sp_13"
                                    android:textColor="@color/c6"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <ImageView
                                    android:layout_gravity="center"
                                    android:src="@mipmap/default_bg"
                                    android:id="@+id/iamge_initiator_head"
                                    android:layout_width="@dimen/dp_35"
                                    android:layout_height="@dimen/dp_35"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginTop="@dimen/dp_4"
                                android:background="@drawable/shape_support"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_44">
                                <ImageView
                                    android:layout_gravity="center"
                                    android:layout_marginRight="@dimen/dp_15"
                                    android:layout_marginLeft="@dimen/dp_18"
                                    android:src="@mipmap/icon_details_time_yzy"
                                    android:layout_width="@dimen/dp_22"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:id="@+id/txt_inititime"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="@string/Initiatingtime"
                                    android:textSize="@dimen/sp_13"
                                    android:textColor="@color/c6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <View
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:id="@+id/txt_initiator_time"
                                    android:layout_marginRight="@dimen/dp_18"
                                    android:text=""
                                    android:textSize="@dimen/sp_13"
                                    android:textColor="@color/c6"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="@dimen/dp_10"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_weight="1"
                                android:textSize="@dimen/sp_15"
                                android:gravity="center|left"
                                android:textColor="@color/c3"
                                android:text="排行榜"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">
                                    <ImageView
                                        android:src="@mipmap/default_bg"
                                        android:id="@+id/iamge_first"
                                        android:layout_width="75dp"
                                        android:layout_height="75dp"
                                        android:layout_gravity="center"
                                        android:padding="1dp"/>

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:src="@mipmap/icon_star_gold_yzy"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">
                                    <ImageView
                                        android:src="@mipmap/default_bg"
                                        android:id="@+id/iamge_rich"
                                        android:layout_width="75dp"
                                        android:layout_height="75dp"
                                        android:layout_gravity="center"
                                        android:padding="1dp"/>

                                    <ImageView
                                        android:src="@mipmap/icon_star_silver_yzy"
                                        android:layout_width="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_height="wrap_content"/>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_gravity="center"
                                    android:orientation="vertical">
                                    <ImageView
                                        android:src="@mipmap/default_bg"
                                        android:id="@+id/iamge_end"
                                        android:layout_width="75dp"
                                        android:layout_height="75dp"
                                        android:layout_gravity="center"
                                        android:padding="1dp"/>
                                    <ImageView
                                        android:src="@mipmap/icon_star_iron_yzy"
                                        android:layout_width="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_height="wrap_content"/>

                                </LinearLayout>
                            </LinearLayout>
                            <TextView
                                android:id="@+id/txt_ranking"
                                android:textSize="@dimen/sp_15"
                                android:gravity="center"
                                android:textColor="@color/c9"
                                android:text=""
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>


                        </LinearLayout>

                        <TextView
                            android:layout_marginTop="@dimen/dp_20"
                            android:layout_gravity="center"
                            android:textColor="@color/c3"
                            android:drawablePadding="5dp"
                            android:drawableRight="@mipmap/icon_back_right_black_yzy"
                            android:textSize="@dimen/sp_16"
                            android:text="查看全部"
                            android:gravity="center"
                            android:id="@+id/see_phb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_weight="1"
                            android:textSize="@dimen/sp_15"
                            android:gravity="center|left"
                            android:textColor="@color/c3"
                            android:text="图文详情"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                        <WebView
                            android:id="@+id/web_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                           />
                    </LinearLayout>
                </com.idolmedia.yzy.view.popwindow.ObservableScrollView>
            </LinearLayout>

        </com.lzy.widget.PullZoomView>
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white0"/>
</LinearLayout>