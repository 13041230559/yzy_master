<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="match_parent">
<include  layout="@layout/include_head_title"/>
    <LinearLayout
        android:background="@mipmap/bg_like_add"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_135">
        <TextView
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_22"
            android:textSize="@dimen/sp_14"
            android:layout_marginBottom="@dimen/dp_22"
            android:textColor="@color/fe"
            android:text="关注你喜欢的爱豆,当相关更新是一直娱会第一时间偷偷提醒你!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

         <LinearLayout
             android:id="@+id/liner_rotate"
             android:layout_gravity="center"
              android:orientation="vertical"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">
             <TextView
                 android:layout_gravity="center"
                 android:text="换一批"
                 android:textSize="@dimen/sp_12"
                 android:textColor="@color/white"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>
             <ImageView
                 android:id="@+id/iamge_rotate"
                 android:layout_marginBottom="@dimen/dp_15"
                 android:layout_marginTop="@dimen/dp_15"
                 android:layout_gravity="center"
                 android:src="@mipmap/icon_like_change"
                 android:layout_width="@dimen/dp_22"
                 android:layout_height="@dimen/dp_22"/>

         </LinearLayout>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_weight="1"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_20"
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>

    <Button
        android:background="@color/fc4f4f"
        android:id="@+id/login_btn"
        android:text="@string/selectok_startyzy"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44" />
</LinearLayout>