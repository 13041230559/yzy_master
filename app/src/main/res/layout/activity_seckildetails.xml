<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.youth.banner.Banner
            android:id="@+id/seckill_banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_370"
            app:indicator_drawable_selected="@drawable/banner"
            app:indicator_height="5dp"
            app:indicator_width="5dp">
        </com.youth.banner.Banner>
    <LinearLayout
        android:padding="@dimen/dp_15"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginBottom="@dimen/dp_15"
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c3"
            android:text="揭晓中 神话SHINHWA出道19周年球限量编号卡全0启1028熊辛淇新专发布一直娱开屏应援"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_titname"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/c6"
            android:text="中国独家发售EXOSUM官方爱丽棒钥匙扣(1张)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="@dimen/dp_4"
            android:id="@+id/txt_no_code"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/c6"
            android:text="期号：0025"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/liner_jxz"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_32"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/yxz_shape"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="揭晓倒计时:"
                android:textColor="@color/white"
                android:textSize="15dp"/>

            <cn.iwgang.countdownview.CountdownView
                android:id="@+id/countdownView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:isHideTimeBackground="true"
                app:isShowDay="true"
                app:isShowHour="true"
                app:isShowMillisecond="true"
                app:isShowMinute="true"
                app:isShowSecond="true"
                app:isTimeTextBold="true"
                app:suffixDay="天"
                app:suffixGravity="bottom"
                app:suffixHour=":"
                app:suffixMinute=":"
                app:suffixSecond=":"
                app:suffixTextColor="@color/white"
                app:suffixTextSize="12sp"
                app:timeTextColor="@color/white"
                app:timeTextSize="15sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/is_"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                     <TextView
                         android:textColor="@color/black"
                         android:text="您参与了：3次"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginTop="@dimen/dp_6"
                        android:textColor="@color/black"
                        android:text="参与号码：1000024"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></View>
                <TextView
                    android:textColor="@color/f3ac7c9"
                    android:text="查看参与号码"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="声明:最终解释权归活动发起方所有"
            android:textColor="@color/c9"
            android:textSize="12sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginRight="@dimen/dp_10"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_launcher"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="本期明星榜"
                android:textColor="@color/black"
                android:textSize="16sp"/>
            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@mipmap/ic_launcher"
                />
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/star_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/liner_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_mycert"
            android:layout_weight="1"
            android:text="我的奖状"
            android:gravity="center"
            android:textSize="@dimen/sp_18"
            android:background="@color/ffc244"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/txt_go"
            android:layout_weight="1"
            android:text="立即参与"
            android:textSize="@dimen/sp_18"
            android:gravity="center"
            android:background="@color/f3ac7c9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>