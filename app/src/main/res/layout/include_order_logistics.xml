<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/liner_logistics"
    android:orientation="horizontal"
    android:paddingRight="@dimen/dp_15"
    android:paddingLeft="@dimen/dp_15"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:textColor="#18c859"
            android:id="@+id/txt_logistics_msg"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快递已经从[西安中转站]发往北京中转站"
            />
        <TextView
            android:id="@+id/txt_logistics_time"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="201702222 10:01：01"
            android:textColor="@color/c9"
            android:textSize="12sp"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_gravity="center"
        android:src="@mipmap/icon_back_right_black_yzy"/>
