<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
<include layout="@layout/include_head_title"/>
    <LinearLayout
        android:paddingTop="@dimen/dp_16"
        android:paddingRight="@dimen/dp_30"
        android:paddingLeft="@dimen/dp_30"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_gravity="center"
            android:background="@drawable/portrait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:padding="@dimen/dp_1"
                android:id="@+id/iamge_head"
                android:layout_width="@dimen/dp_72"
                android:layout_height="@dimen/dp_72"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                />

            <ImageView
                android:visibility="gone"
                android:layout_marginBottom="@dimen/dp_10"
                android:id="@+id/iamge_grade"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_alignBottom="@+id/iamge_head"
                android:layout_alignEnd="@+id/iamge_head"
                android:src="@mipmap/v4"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/dp_15"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="@dimen/dp_15"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="@dimen/dp_15"
                    android:textStyle="bold"
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/user_name"
                    android:textColor="@color/c3"
                    android:textSize="@dimen/sp_16"/>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/txt_certification"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_18"
                    android:layout_marginEnd="12dp"

                    android:background="@drawable/rz_backg_gz"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:text="+关注"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"/>
            </LinearLayout>

            <TextView
                android:layout_marginTop="@dimen/dp_15"
                android:id="@+id/txt_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="商品 235 |社区 9900 |活动1.1万"
                android:textColor="@color/c6"
                android:textSize="@dimen/sp_14"/>

        </LinearLayout>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_64">
    <com.flyco.tablayout.SegmentTabLayout
        android:id="@+id/tab_layout"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        tl:tl_textsize="@dimen/sp_14"
        tl:tl_bar_color="#ff8282"
        tl:tl_indicator_anim_enable="true"
        tl:tl_indicator_color="#ffff"
        tl:tl_textSelectColor="#ff8282"
        tl:tl_indicator_margin_bottom="2dp"
        tl:tl_indicator_margin_left="2dp"
        tl:tl_indicator_margin_right="2dp"
        tl:tl_indicator_margin_top="2dp"
        tl:tl_textBold="SELECT"/>
</LinearLayout>
   <android.support.v4.view.ViewPager
       android:id="@+id/view_page"
       android:layout_width="match_parent"
       android:layout_height="match_parent"/>

</LinearLayout>