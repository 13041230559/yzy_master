<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/include_head_title"/>
    <LinearLayout
        android:padding="@dimen/dp_15"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txt_logistics"
            android:textSize="@dimen/sp_12"
            android:text="韵达快递:        "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_ordernum"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_12"
            android:text="订单编号:        "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">
            <View
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_copy_logistics"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_32"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/order_btnitem"
                android:gravity="center"
                android:text="复制快递单号"
                android:textColor="@color/c3"
                />
            <TextView
                android:id="@+id/txt_copy_order"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_32"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/order_btnitem"
                android:gravity="center"
                android:text="复制订单编号"
                android:textColor="@color/c3"
                />
        </LinearLayout>
        <TextView
            android:layout_marginTop="@dimen/dp_20"
            android:textColor="@color/g6"
            android:id="@+id/txt_logistics_time"
            android:textSize="@dimen/sp_12"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="@dimen/dp_5"
            android:id="@+id/txt_logistics_content"
            android:textSize="@dimen/sp_12"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_select_logistics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@drawable/save_code"
            android:paddingBottom="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:paddingTop="@dimen/dp_5"
            android:text="查看更多物流"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>