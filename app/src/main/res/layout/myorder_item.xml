<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <include layout="@layout/myorder_item_top"/>
     <LinearLayout
         android:orientation="vertical"
         android:id="@+id/linear_shop"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"/>
    <LinearLayout
        android:background="@color/fafafa"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        android:id="@+id/linear_remarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:background="@color/fafafa"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_15"
        android:id="@+id/linear_total"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">
        <TextView
            android:id="@+id/txt_total"
            android:layout_gravity="center"
            android:textColor="@color/c3"
            android:text="合 计:￥145"
            android:textSize="@dimen/sp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_logistics_price"
            android:layout_gravity="center"
            android:textColor="@color/c9"
            android:text="（含运费￥：8.00）"
            android:textSize="@dimen/sp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_gravity="center"
            android:gravity="right"
            android:layout_weight="1"
            android:id="@+id/txt_total_number"
            android:textColor="@color/c3"
            android:text="共1件商品"
            android:textSize="@dimen/sp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60">
