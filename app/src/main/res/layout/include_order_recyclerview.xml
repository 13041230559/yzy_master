<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:id="@+id/liner_oderitem"
              android:layout_width="match_parent"
              android:background="@color/white"
              android:layout_height="wrap_content">
   <android.support.v7.widget.RecyclerView
       android:id="@+id/recyclerView"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>
   <LinearLayout
       android:visibility="gone"
       android:padding="@dimen/dp_15"
       android:id="@+id/liner_addition"
       android:orientation="vertical"
       android:background="@color/fafafa"
       android:layout_marginTop="@dimen/dp_22"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>
   <LinearLayout
       android:id="@+id/liner_total"
       android:paddingTop="@dimen/dp_5"
       android:paddingRight="@dimen/dp_15"
       android:paddingLeft="@dimen/dp_15"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="@dimen/dp_44">
      <TextView
          android:layout_marginTop="@dimen/dp_10"
          android:id="@+id/txt_subtotal"
          android:gravity="center|right"
          android:textColor="@color/c3"
          android:text="合 计:￥145"
          android:textSize="@dimen/sp_15"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
      <TextView
          android:layout_marginLeft="@dimen/dp_5"
          android:layout_marginTop="@dimen/dp_10"
          android:id="@+id/txt_freight"
          android:gravity="center|right"
          android:textColor="@color/c9"
          android:text="(不含运费)"
          android:textSize="@dimen/sp_12"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>

      <View
          android:layout_weight="1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>
      <TextView
          android:layout_marginTop="@dimen/dp_10"
          android:id="@+id/txt_shop_number"
          android:gravity="center|right"
          android:textColor="@color/c3"
          android:text="共1件商品"
          android:textSize="@dimen/sp_12"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
   </LinearLayout>
   <LinearLayout
       android:paddingRight="@dimen/dp_15"
       android:paddingLeft="@dimen/dp_15"
       android:id="@+id/liner_orderset"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="@dimen/dp_50">
      <View
          android:id="@+id/view"
          android:layout_weight="1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>
      <cn.iwgang.countdownview.CountdownView
          android:visibility="gone"
          android:id="@+id/countdownView"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_gravity="center"
          android:layout_marginLeft="@dimen/dp_10"
          app:isHideTimeBackground="true"
          app:isShowDay="true"
          app:isShowHour="true"
          app:isShowMillisecond="true"
          app:isShowMinute="true"
          app:isShowSecond="true"
          app:isTimeTextBold="true"
          app:suffixDay="天"
          app:suffixGravity="bottom"
          app:suffixHour=":"
          app:suffixMinute=":"
          app:suffixSecond=":"
          app:suffixTextColor="#ababab"
          app:suffixTextSize="15sp"
          app:timeTextColor="#ababab"
          app:timeTextSize="15sp"
          android:layout_marginRight="@dimen/dp_15"
          />


      <TextView
          android:visibility="gone"
          android:id="@+id/txt_canceloder"
          android:layout_width="wrap_content"
          android:layout_height="@dimen/dp_32"
          android:layout_gravity="center"
          android:layout_marginRight="@dimen/dp_15"
          android:background="@drawable/order_btnitem"
          android:gravity="center"
          android:text="取消订单"
          android:textColor="@color/c3"
          />
      <TextView
          android:visibility="gone"
          android:id="@+id/txt_cancel"
          android:layout_marginRight="@dimen/dp_15"
          android:layout_gravity="center"
          android:text="已取消"
          android:background="@drawable/order_btnitem"
          android:gravity="center"
          android:textColor="@color/c3"
          android:layout_width="@dimen/dp_80"
          android:layout_height="@dimen/dp_32"/>
      <TextView
          android:visibility="gone"
          android:id="@+id/txt_pay"
          android:layout_gravity="center"
          android:text="付款"
          android:gravity="center"
          android:background="@drawable/order_btnitem1"
          android:textColor="@color/ff8282"
          android:layout_width="@dimen/dp_80"
          android:layout_height="@dimen/dp_32"/>
      <TextView
          android:visibility="gone"
          android:id="@+id/txt_remind"
          android:layout_gravity="right"
          android:text="提醒发货"
          android:background="@drawable/order_btnitem1"
          android:textColor="@color/ff8282"
          android:gravity="center"
          android:layout_width="wrap_content"
          android:layout_height="@dimen/dp_32"/>
      <TextView
          android:visibility="gone"
          android:id="@+id/txt_logistics"
          android:layout_gravity="center"
          android:text="查看物流"
          android:background="@drawable/order_btnitem1"
          android:gravity="center"
          android:textColor="@color/ff8282"
          android:layout_width="wrap_content"
          android:layout_height="@dimen/dp_32"/>
      <TextView
          android:layout_marginLeft="@dimen/dp_15"
          android:visibility="gone"
          android:id="@+id/txt_goodreceipt"
          android:layout_gravity="center"
          android:text="确认收货"
          android:background="@drawable/order_btnitem1"
          android:gravity="center"
          android:textColor="@color/ff8282"
          android:layout_width="wrap_content"
          android:layout_height="@dimen/dp_32"/>

      <TextView
          android:layout_marginLeft="@dimen/dp_15"
          android:visibility="gone"
          android:id="@+id/txt_waitingApprise"
          android:layout_gravity="center"
          android:text="去评价"
          android:background="@drawable/order_btnitem1"
          android:gravity="center"
          android:textColor="@color/ff8282"
          android:layout_width="@dimen/dp_80"
          android:layout_height="@dimen/dp_32"/>

      <TextView
          android:visibility="gone"
          android:id="@+id/txt_retainage"
          android:layout_gravity="center"
          android:text="支付尾款"
          android:background="@drawable/order_btnitem1"
          android:textColor="@color/ff8282"
          android:gravity="center"
          android:layout_width="wrap_content"
          android:layout_height="@dimen/dp_32"/>

      <TextView
          android:visibility="gone"
          android:id="@+id/txt_deloder"
          android:layout_width="wrap_content"
          android:layout_height="@dimen/dp_32"
          android:layout_gravity="center"
          android:background="@drawable/order_btnitem1"
          android:textColor="@color/ff8282"
          android:gravity="center"
          android:text="删除订单"

          />

      <TextView
          android:visibility="gone"
          android:id="@+id/txt_close_order"
          android:layout_gravity="center"
          android:text="交易关闭"
          android:background="@drawable/order_btnitem"
          android:textColor="@color/c3"
          android:gravity="center"
          android:layout_width="wrap_content"
          android:layout_height="@dimen/dp_32"/>

      <!-- <TextView
           android:id="@+id/txt_remind"
           android:layout_marginRight="@dimen/dp_15"
           android:layout_gravity="center"
           android:text="提醒发货"
           android:background="@drawable/order_btnitem"
           android:gravity="center"
           android:textColor="@color/c3"
           android:layout_width="wrap_content"
           android:layout_height="@dimen/dp_32"/>-->

   </LinearLayout>
