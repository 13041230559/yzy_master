<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.idolmedia.yzy.view.popwindow.ObservableScrollView
        android:layout_weight="1"
        android:id="@+id/ob_scrolview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include layout="@layout/commd_details_head"/>
            <LinearLayout
                android:padding="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:textColor="@color/c3"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:lines="2"
                    android:id="@+id/txt_title"
                    android:text=""
                    android:textSize="@dimen/sp_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:id="@+id/liner_deposit"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txt_deposit_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/ff8282"
                        android:textSize="@dimen/sp_15"/>
                    <TextView
                        android:textColor="@color/ff8282"
                        android:id="@+id/txt_retainage_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text=""
                        android:textSize="@dimen/sp_15"/>

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/txt_retainage_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="尾款将于：10月19 18:00开起"
                        android:textColor="@color/c3"
                        android:textSize="@dimen/sp_15"/>
                    <TextView
                        android:id="@+id/txt_deposit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text=""
                        android:textColor="@color/mian_color"
                        android:textSize="@dimen/sp_15"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/txt_pricerange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/mian_color"
                    android:textSize="@dimen/sp_20"/>
                <TextView
                    android:layout_marginBottom="4dp"
                    android:id="@+id/txt_sold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text=""
                    android:textColor="@color/c9"
                    android:textSize="12sp"/>
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iamge_zy"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:src="@mipmap/zy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:id="@+id/liner_activity"
                    android:background="@drawable/shape_support"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginLeft="@dimen/dp_18"
                        android:src="@mipmap/icon_details_sale_yzy"
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txt_activity"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/activity_"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/c6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/activity_content"
                        android:layout_marginRight="@dimen/dp_18"
                        android:text=""
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/main_color"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@drawable/shape_support"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginLeft="@dimen/dp_18"
                        android:src="@mipmap/icon_details_sponsors_yzy"
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txt_initiator"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/Initiator"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/c6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/txt_initiator_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/dp_9"
                        android:text=""
                        android:textColor="@color/c6"
                        android:textSize="@dimen/sp_13"/>
                    <ImageView
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_gravity="center"
                        android:src="@mipmap/default_bg"
                        android:id="@+id/iamge_initiator_head"
                        android:layout_width="@dimen/dp_35"
                        android:layout_height="match_parent"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_4"
                    android:background="@drawable/shape_support"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginLeft="@dimen/dp_18"
                        android:src="@mipmap/icon_details_time_yzy"
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txt_inititime"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/pushtime"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/c6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txt_initiator_time"
                        android:layout_marginRight="@dimen/dp_18"
                        android:text=""
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/c6"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">
                    <TextView
                        android:layout_weight="1"
                        android:textSize="@dimen/sp_15"
                        android:gravity="center|left"
                        android:textColor="@color/c3"
                        android:text="宝贝评价"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/txt_comment"
                        android:textSize="@dimen/sp_15"
                        android:gravity="center"
                        android:textColor="@color/c9"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/commd_liner"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <com.zhy.view.flowlayout.TagFlowLayout
                    android:layout_marginBottom="@dimen/dp_20"
                    android:id="@+id/flowlayout"
                    app:max_select="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <include layout="@layout/commd_pl_item"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/txt_noevaluate"
                    android:textColor="@color/c3"
                    android:textSize="@dimen/sp_15"
                    android:text="暂无评价"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/see_pl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_20"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/icon_back_right_black_yzy"
                    android:gravity="center"
                    android:text="查看全部"
                    android:textColor="@color/c3"
                    android:textSize="@dimen/sp_16"/>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">
                    <TextView
                        android:layout_weight="1"
                        android:textSize="@dimen/sp_15"
                        android:gravity="center|left"
                        android:textColor="@color/c3"
                        android:text="排行榜"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/txt_ranking"
                        android:textSize="@dimen/sp_15"
                        android:gravity="center"
                        android:textColor="@color/c9"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <ImageView
                            android:src="@mipmap/default_bg"
                            android:id="@+id/iamge_first"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_gravity="center"
                            android:padding="1dp"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@mipmap/icon_star_gold_yzy"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <ImageView
                            android:src="@mipmap/default_bg"
                            android:id="@+id/iamge_rich"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_gravity="center"
                            android:padding="1dp"/>

                        <ImageView
                            android:src="@mipmap/icon_star_silver_yzy"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:src="@mipmap/default_bg"
                            android:id="@+id/iamge_end"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_gravity="center"
                            android:padding="1dp"/>
                        <ImageView
                            android:src="@mipmap/icon_star_iron_yzy"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                </LinearLayout>


                <!-- <android.support.v7.widget.RecyclerView
                     android:id="@+id/recy_ranking"
                     android:paddingLeft="@dimen/dp_40"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"/>-->
                <TextView
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_gravity="center"
                    android:textColor="@color/c3"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/icon_back_right_black_yzy"
                    android:textSize="@dimen/sp_16"
                    android:text="查看全部"
                    android:gravity="center"
                    android:id="@+id/see_phb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_weight="1"
                    android:textSize="@dimen/sp_15"
                    android:gravity="center|left"
                    android:textColor="@color/c3"
                    android:text="图文详情"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <WebView
                    android:id="@+id/web_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                  />
            </LinearLayout>

        </LinearLayout>
    </com.idolmedia.yzy.view.popwindow.ObservableScrollView>

</LinearLayout>