<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <View
        android:background="@color/fafafa"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:src="@mipmap/default_bj"
        android:id="@+id/iamge_figure"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_120"/>
    <LinearLayout
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_title"
            android:text="txt_title"
            android:textColor="@color/c6"
            android:textSize="@dimen/sp_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_18"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_describe"
                android:text="自营周边类满49元包邮"
                android:textColor="@color/mian_color"
                android:textSize="@dimen/sp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:id="@+id/txt_sold"
            android:text="已预订1000件"
            android:textColor="@color/c9"
            android:textSize="@dimen/sp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
            <View
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:text="定金 "
                android:textColor="@color/c9"
                android:textSize="@dimen/sp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/txt_pirce"
                android:text=""
                android:textColor="@color/mian_color"
                android:textSize="@dimen/sp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               />
         <!--   <ImageView
                android:id="@+id/iamg_addcart"
                android:src="@mipmap/ic_launcher"
                android:layout_gravity="center"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"/>-->
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    <View
        android:background="@color/fafafa"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"/>
</LinearLayout>