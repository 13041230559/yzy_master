<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout

        android:paddingTop="@dimen/dp_22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/txt_addressname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JOKER.WANG"
            android:textColor="@color/c6"
            android:textSize="16sp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/txt_addressphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13041230559"
            android:textColor="@color/c6"
            android:textSize="14sp"
            />
    </LinearLayout>

    <TextView
        android:ellipsize="end"
        android:maxLines="2"
        android:lines="2"
        android:textColor="@color/c3"
        android:textSize="@dimen/sp_14"
       android:layout_marginTop="@dimen/dp_15"
        android:text="北京市北京丰台区马家堡搜宝中心2号楼2612"
        android:id="@+id/txt_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
      android:layout_marginTop="@dimen/dp_4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30">
         <View
             android:layout_weight="1"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"/>
        <TextView
            android:drawablePadding="@dimen/dp_5"
            android:id="@+id/iamge_update"
            android:text="编辑"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:layout_marginRight="@dimen/dp_30"
            android:textColor="@color/c3"
            android:drawableLeft="@mipmap/icon_edit_yzy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:drawablePadding="@dimen/dp_5"
            android:id="@+id/iamge_del"
            android:text="删除"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:textColor="@color/c3"
            android:drawableLeft="@mipmap/icon_delete_yzy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <!--<ImageView
            android:layout_gravity="center"
            android:id="@+id/iamge_update"
            android:layout_marginRight="@dimen/dp_30"
            android:src="@mipmap/icon_delete_edit_yzy"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"/>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/iamge_del"
            android:src="@mipmap/icon_delete_yzy"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"/>-->
    </LinearLayout>
    </LinearLayout>
    <View
        android:background="@color/f5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"/>

</LinearLayout>