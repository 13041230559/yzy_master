<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@android:color/white"
    android:orientation="vertical">

    <View
        android:background="@color/white0"
        android:layout_width="match_parent"
        android:layout_height="2dp"></View>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/txt_curc"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="参与人次"
                android:textSize="16sp"
                android:textColor="@color/g6" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_20"
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <ImageView
            android:layout_weight="4"
               android:src="@mipmap/ic_launcher"
                android:id="@+id/iamge_reduce"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/txtcolor" />

            <TextView
                android:layout_weight="3"
                android:id="@+id/txt_peoplenumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/Accent" />

            <ImageView
                android:src="@mipmap/ic_launcher"
                android:layout_weight="4"
                android:id="@+id/iamge_add"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               />
            <TextView
                android:layout_weight="3"
                android:id="@+id/txt_all"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_all_btn"
                android:gravity="center"
                android:padding="10dp"
                android:text="剩余全要"
                android:textSize="15sp"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_32"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/txt_one"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/txtcolor" />

            <TextView
                android:id="@+id/txt_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/sp_14"
                android:text="4"
                android:textColor="@color/txtcolor" />

            <TextView
                android:textSize="@dimen/sp_14"
                android:id="@+id/txt_three"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="8"
                android:textColor="@color/txtcolor" />
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white0"
        />
    <TextView
        android:id="@+id/txt_totalbean"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="共0娱豆"/>

    <TextView
        android:id="@+id/txt_go"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@color/ed3d3d"
        android:gravity="center"
        android:text="立刻参与"
        android:textColor="@color/white" />


</LinearLayout>