<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/include_head_title"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:paddingRight="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/linear_layout_phone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40">
                    <TextView
                        android:id="@+id/txt_country"
                        android:textColor="@color/c6"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:drawablePadding="@dimen/dp_10"
                        android:textSize="@dimen/sp_15"
                        android:layout_marginRight="@dimen/dp_5"
                        android:drawableLeft="@mipmap/icon_log_phone_yzy"
                        android:text="中国大陆+86"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/edit_phone"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:textSize="@dimen/sp_15"
                        android:textColorHint="@color/c6"
                        android:hint="请输入手机号"
                        android:textColor="@color/c3"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/liner_code"
                    android:layout_marginTop="@dimen/dp_8"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:drawablePadding="@dimen/dp_10"
                        android:drawableLeft="@mipmap/icon_log_text_yzy"
                        android:layout_weight="1"
                        android:id="@+id/edit_phone_code"
                        android:layout_gravity="center"
                        android:text=""
                        android:textColorHint="@color/c6"
                        android:hint="@string/pleasecode"
                        android:textSize="@dimen/sp_14"
                        android:background="@null"
                        android:textColor="@color/txtcolor"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_40"/>
                    <TextView
                        android:id="@+id/txt_code"
                        android:background="@drawable/code_circular_backround"
                        android:textColor="@color/white"
                        android:text="获取验证码"
                        android:textColorHint="@color/black"
                        android:gravity="center"
                        android:paddingBottom="@dimen/dp_5"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingRight="@dimen/dp_20"
                        android:paddingLeft="@dimen/dp_20"
                        android:textSize="@dimen/sp_10"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_30"/>
                </LinearLayout>
                <TextView
                    android:textColor="@color/c6"
                    android:text="更换手机号后,下次登录可以使用新手机登录"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/c6"
                    android:layout_marginTop="@dimen/dp_5"
                    android:id="@+id/txt_this_phone"
                    android:text="当前手机号：13041230559"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/linear_layout_pass"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/liner_old_pass"
                    android:layout_marginTop="@dimen/dp_8"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_gravity="center"
                        android:src="@mipmap/icon_log_lock_yzy"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"/>
                    <EditText
                        android:id="@+id/edit_y_pass"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:text=""
                        android:inputType="textPassword"
                        android:textColorHint="@color/c6"
                        android:hint="请输入原密码"
                        android:textSize="@dimen/sp_14"
                        android:background="@null"
                        android:textColor="@color/txtcolor"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_40"/>
                    <ImageView
                        android:id="@+id/select_y_pass"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginLeft="@dimen/dp_22"
                        android:layout_gravity="center"
                        android:src="@mipmap/icon_eye_yzy"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_8"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_gravity="center"
                        android:src="@mipmap/icon_log_lock_yzy"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"/>
                    <EditText
                        android:id="@+id/edit_n_pass"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:text=""
                        android:inputType="textPassword"
                        android:textColorHint="@color/c6"
                        android:hint="请输入6-20位新密码"
                        android:textSize="@dimen/sp_14"
                        android:background="@null"
                        android:textColor="@color/txtcolor"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_40"/>
                    <ImageView
                        android:id="@+id/select_n_pass"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginLeft="@dimen/dp_22"
                        android:layout_gravity="center"
                        android:src="@mipmap/icon_eye_yzy"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/dp_8"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_gravity="center"
                        android:src="@mipmap/icon_log_lock_yzy"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"/>
                    <EditText
                        android:id="@+id/edit_nn_pass"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:text=""
                        android:inputType="textPassword"
                        android:textColorHint="@color/c6"
                        android:hint="请再次输入新密码"
                        android:textSize="@dimen/sp_14"
                        android:background="@null"
                        android:textColor="@color/txtcolor"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_40"/>
                    <ImageView
                        android:id="@+id/select_nn_pass"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginLeft="@dimen/dp_22"
                        android:layout_gravity="center"
                        android:src="@mipmap/icon_eye_yzy"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/linear_layout_email"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40">
                    <EditText
                        android:textColor="@color/c3"
                        android:id="@+id/edit_email"
                        android:drawablePadding="@dimen/dp_10"
                        android:drawableLeft="@mipmap/icon_log_email_yzy"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:textSize="@dimen/sp_15"
                        android:text="13041230559@163.com"
                        android:textColorHint="@color/c6"
                        android:hint="请输入邮箱号"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_8"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:drawablePadding="@dimen/dp_10"
                        android:drawableLeft="@mipmap/icon_log_text_yzy"
                        android:layout_weight="1"
                        android:id="@+id/edit_email_code"
                        android:layout_gravity="center"
                        android:text=""
                        android:textColorHint="@color/c6"
                        android:hint="@string/pleasecode"
                        android:textSize="@dimen/sp_14"
                        android:background="@null"
                        android:textColor="@color/c3"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_40"/>
                    <TextView
                        android:id="@+id/txt_email_code"
                        android:background="@drawable/code_circular_backround"
                        android:textColor="@color/white"
                        android:text="获取验证码"
                        android:textColorHint="@color/black"
                        android:gravity="center"
                        android:paddingBottom="@dimen/dp_5"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingRight="@dimen/dp_20"
                        android:paddingLeft="@dimen/dp_20"
                        android:textSize="@dimen/sp_10"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_30"/>


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>





    </android.support.v4.widget.NestedScrollView>

    <TextView
        android:id="@+id/txt_go"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/mian_color"
        android:gravity="center"
        android:textSize="@dimen/sp_18"
        android:text="完成"
        android:textColor="@color/white" />
</LinearLayout>