<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/include_head_title"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="@dimen/dp_30"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iamge_fans_team"
                android:layout_gravity="center"
                android:src="@mipmap/img_certification_team_yzy"
                android:layout_width="@dimen/dp_165"
                android:layout_height="@dimen/dp_165"/>
            <TextView
                android:id="@+id/txt_fans_team"
                android:layout_marginTop="@dimen/dp_15"
                android:text="@string/fans_team"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/c3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:background="@drawable/save_code"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="未通过"
            android:textColor="@color/white"
            android:id="@+id/txt_auth_results"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_40"/>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_60"
            android:paddingLeft="@dimen/dp_40"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="@color/c3"
                android:text="未通过原因:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:textSize="@dimen/sp_12"
                android:layout_marginTop="@dimen/dp_15"
                android:id="@+id/txt_no_authen_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:textColor="@color/c9"
                android:text="如果有疑问可电联一直娱/娱大宝"
                android:textSize="@dimen/sp_12"
                android:layout_marginTop="@dimen/dp_36"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>




</LinearLayout>