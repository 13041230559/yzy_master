<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
>
    <android.support.v4.view.ViewPager
        android:id="@+id/view_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_45"/>

    <LinearLayout
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
        android:paddingRight="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:id="@+id/top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_marginRight="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:id="@+id/rela_close"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/circular_b"
            android:gravity="center">
            <ImageView
                android:id="@+id/image_close"
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_26"
                android:layout_gravity="center"
                android:padding="5dp"
                android:src="@mipmap/icon_back_white_yzy"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"/>

        </RelativeLayout>
        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            app:tabIndicatorColor="@color/transparent"
            app:tabSelectedTextColor="@color/fea94e"
            app:tabTextColor="@color/white"
            />

        <RelativeLayout
            android:visibility="gone"
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/rela_cart"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:background="@drawable/circular_b"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true">
            <ImageView

                android:id="@+id/iamge_cart"
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_28"
                android:layout_gravity="center"
                android:padding="5dp"
                android:src="@mipmap/icon_car_white_yzy"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/rela_shaer"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:background="@drawable/circular_b"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true">
            <ImageView
                android:id="@+id/iamge_shaer"
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_28"
                android:layout_gravity="center"
                android:padding="5dp"
                android:src="@mipmap/icon_share_yzy"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                />
        </RelativeLayout></LinearLayout>

    <LinearLayout
        android:layout_gravity="bottom"
        android:id="@+id/liner_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/white"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/liner_collection"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:drawablePadding="@dimen/dp_5"
                android:drawableLeft="@mipmap/icon_love_normal_yzy"
                android:layout_marginLeft="@dimen/dp_15"
                android:id="@+id/txt_collectNum"
                android:text="0"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp_15"
                android:textColor="@color/c3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="14sp"/>
        </LinearLayout>
        <TextView
            android:textColor="@color/white"
            android:id="@+id/txt_go"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/fc4f4f"
            android:gravity="center"
            android:text="立即支持"
            android:textSize="18sp"/>
    </LinearLayout>
</FrameLayout>