<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/f5"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_weight="1"
        android:id="@+id/rela_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:background="@drawable/advertisement_txt"
            android:id="@+id/txt_advertisement"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="12sp"
            android:text="跳过3"
            android:layout_width="@dimen/dp_65"
            android:layout_height="@dimen/dp_24"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="@dimen/dp_22"
            android:layout_marginTop="16dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>
        <ImageView
            android:id="@+id/iamge_advertisement"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>

    </RelativeLayout>

    <ImageView
        android:src="@mipmap/logo_botton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"/>
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:background="@color/f5"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logo"
            android:src="@mipmap/splash_raduis"
            android:layout_width="@dimen/dp_71"
            android:layout_height="@dimen/dp_71"
            android:layout_gravity="center"

            />

        <LinearLayout
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_logoname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="一   直   娱 "
                android:textColor="@color/c3"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/txt_logojs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="@string/js"
                android:textColor="@color/c4"
                android:textSize="10sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>