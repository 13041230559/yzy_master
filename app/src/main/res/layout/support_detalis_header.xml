<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/ss_header"
    android:layout_height="@dimen/dp_375">

    <com.youth.banner.Banner
        android:id="@id/ss_zoom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/app_fango_20170630_homer_01"/>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@mipmap/img_huodong_time_yzy"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/iamge_time"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_gravity="center|left"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="15dp"
            android:src="@mipmap/icon_details_time_yzy"/>

        <TextView
            android:id="@+id/txt_shopstate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="距离活动结束倒计时："
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"/>

        <cn.iwgang.countdownview.CountdownView
            android:id="@+id/countdownView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center|left"
            app:isHideTimeBackground="true"
            app:isShowDay="true"
            app:isShowHour="true"
            app:isShowMinute="true"
            app:isShowSecond="true"
            app:isTimeTextBold="false"
            app:suffixDay="天"
            app:suffixGravity="bottom"
            app:suffixHour="时"
            app:suffixMinute="分"
            app:suffixSecond="秒"
            app:isSuffixTextBold="false"
            app:suffixTextColor="@color/white"
            app:suffixTextSize="@dimen/sp_14"
            app:timeTextColor="@color/white"
            app:timeTextSize="@dimen/sp_14"
            />
    </LinearLayout>

</RelativeLayout>