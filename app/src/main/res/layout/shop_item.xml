<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <ImageView
        android:src="@mipmap/ic_launcher"
        android:id="@+id/iamg_shop"
        android:layout_width="@dimen/dp_180"
        android:layout_height="@dimen/dp_180"/>
    <LinearLayout
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_width="match_parent">
    <TextView
        android:id="@+id/txt_content"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/b1b1b1"
        android:lines="2"
        android:ellipsize="end"
        android:text="海外直邮神话SHINHWA出道19周年店庆"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_32">

        <TextView
            android:layout_gravity="center"
            android:id="@+id/txt_discountprice"
            android:text="￥14522"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/mian_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_gravity="center"
            android:id="@+id/txt_originalprice"
            android:textSize="12sp"
            android:layout_marginLeft="@dimen/dp_8"
            android:text="￥20000"
            android:textColor="@color/c9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
        <LinearLayout
            android:paddingBottom="@dimen/dp_15"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:id="@+id/txt_sold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已售出1000W件"
                android:textColor="@color/c6"
                android:textSize="@dimen/sp_12"/>
            <View
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <ImageView
                android:layout_marginRight="@dimen/dp_14"
                android:id="@+id/iamg_addshop"
                android:src="@mipmap/ic_launcher"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"/>
   </LinearLayout>
    </LinearLayout>
</LinearLayout>