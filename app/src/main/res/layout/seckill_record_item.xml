<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:paddingTop="@dimen/dp_22"
        android:paddingLeft="@dimen/dp_22"
        android:paddingRight="@dimen/dp_22"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
   <ImageView
       android:id="@+id/iamge_figure"
       android:src="@mipmap/ic_launcher"
       android:layout_width="@dimen/dp_100"
       android:layout_height="@dimen/dp_100"/>
        <LinearLayout
            android:paddingLeft="@dimen/dp_8"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginBottom="@dimen/dp_12"
                android:id="@+id/txt_title"
                android:textColor="@color/c3"
                android:text="有产品经理。程序员是死敌"
                android:textSize="@dimen/sp_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/liner_yjx"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_marginBottom="@dimen/dp_4"
                android:id="@+id/txt_winning_people"
                android:textColor="@color/c6"
                android:text="中奖者：JOKERWANG"
                android:textSize="@dimen/sp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginBottom="@dimen/dp_4"
                android:id="@+id/txt_winning_number"
                android:textColor="@color/c6"
                android:text="中奖号码：10000000"
                android:textSize="@dimen/sp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginBottom="@dimen/dp_4"
                android:id="@+id/txt_winning_participate"
                android:textColor="@color/c6"
                android:text="本期参与：12 人次"
                android:textSize="@dimen/sp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginBottom="@dimen/dp_4"
                android:id="@+id/txt_winning_time"
                android:textColor="@color/c6"
                android:text="揭晓时间：2017-06-13"
                android:textSize="@dimen/sp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            </LinearLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_winning_head"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_launcher"
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_32"
                    />

                    <ImageView
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/app_fango_20170630_homer_01"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:orientation="vertical"
                android:id="@+id/liner_jxz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ProgressBar
                    android:id="@+id/progressbar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="100"
                    android:progressDrawable="@drawable/bar_color"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txt_total_itemrequired"
                        android:layout_marginTop="@dimen/dp_8"
                        android:layout_weight="1"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/c6"
                        android:text="总需：5000人次"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/txt_surplus"
                        android:gravity="right"
                        android:layout_marginTop="@dimen/dp_8"
                        android:layout_weight="1"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/c6"
                        android:text="剩余：0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
<LinearLayout
    android:layout_marginTop="@dimen/dp_22"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_seckil_total"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/c3"
        android:text="合计：8娱豆"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txt_total_required"
        android:layout_weight="1"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/c9"
        android:text="(总需：5000人次)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txt_participate_number"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/c3"
        android:text="共8人次"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
    <LinearLayout
        android:layout_marginBottom="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:layout_gravity="center"
            android:id="@+id/txt_type"
            android:textSize="@dimen/sp_14"
            android:textColor="#e83737"
            android:text="已揭晓"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_state"
            android:layout_width="80dp"
            android:layout_height="@dimen/dp_32"
            android:layout_gravity="center"
            android:background="@drawable/order_btnitem"
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            android:text="@string/view_number"
            android:textColor="@color/c3"
            />

        <TextView
            android:id="@+id/txt_state1"
            android:layout_width="80dp"
            android:layout_height="@dimen/dp_32"
            android:layout_gravity="center"
            android:background="@drawable/order_btnitem1"
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            android:text="@string/view_number"
            android:textColor="@color/Accent"
            />
    </LinearLayout>
    </LinearLayout>
    <View
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"/>
</LinearLayout>