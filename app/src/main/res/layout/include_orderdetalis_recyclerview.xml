<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:id="@+id/liner_oderitem"
              android:layout_width="match_parent"
              android:background="@color/white"
              android:layout_height="wrap_content">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:visibility="gone"
        android:padding="@dimen/dp_15"
        android:id="@+id/liner_addition"
        android:orientation="vertical"
        android:background="@color/fafafa"
        android:layout_marginTop="@dimen/dp_22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
 <LinearLayout
         android:paddingLeft="@dimen/dp_15"
         android:paddingRight="@dimen/dp_15"
         android:id="@+id/liner_cost"
         android:orientation="vertical"
         android:paddingTop="@dimen/dp_22"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/sp_16"
            android:textColor="@color/c3"
            android:text="费用明细:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_22"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c3"
                android:text="商品总金额:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_total"
                android:gravity="right"
                android:layout_weight="1"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/c3"
                android:text="￥192.00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

     <LinearLayout
         android:visibility="gone"
         android:id="@+id/liner_deposit"
         android:layout_marginTop="@dimen/dp_11"
         android:orientation="horizontal"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <TextView
             android:id="@+id/txt_deposit_pirce"
             android:layout_marginRight="@dimen/dp_12"
             android:textSize="@dimen/sp_14"
             android:textColor="@color/c3"
             android:text="定金: "
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>
         <TextView
             android:id="@+id/txt_deposit_type"
             android:gravity="right"
             android:layout_weight="1"
             android:textSize="@dimen/sp_12"
             android:textColor="@color/c3"
             android:text="未付款"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>

     </LinearLayout>
     <LinearLayout
         android:visibility="gone"
         android:id="@+id/liner_retainage"
         android:layout_marginTop="@dimen/dp_5"
         android:orientation="horizontal"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <TextView
             android:id="@+id/txt_retainage_price"
             android:layout_marginRight="@dimen/dp_12"
             android:textSize="@dimen/sp_14"
             android:textColor="@color/c3"
             android:text="尾款:"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>
         <TextView
             android:id="@+id/txt_retainage_type"
             android:gravity="right"
             android:layout_weight="1"
             android:textSize="@dimen/sp_12"
             android:textColor="@color/c3"
             android:text="未付款"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>

     </LinearLayout>
     <LinearLayout
         android:layout_marginBottom="@dimen/dp_15"
         android:layout_marginTop="@dimen/dp_15"
         android:orientation="horizontal"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <TextView
             android:textSize="@dimen/sp_14"
             android:textColor="@color/c3"
             android:text="配送费"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>
         <TextView
             android:id="@+id/txt_express_price"
             android:gravity="right"
             android:layout_weight="1"
             android:textSize="@dimen/sp_12"
             android:textColor="@color/c3"
             android:text="￥192.00"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>

     </LinearLayout>
     <LinearLayout
         android:visibility="gone"
         android:layout_marginTop="@dimen/dp_15"
         android:orientation="horizontal"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <TextView
             android:textSize="@dimen/sp_14"
             android:textColor="@color/c3"
             android:text="商品优惠"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>
         <TextView
             android:gravity="right"
             android:layout_weight="1"
             android:textSize="@dimen/sp_12"
             android:textColor="@color/c3"
             android:text="￥192.00"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>

     </LinearLayout>
     </LinearLayout>
    <View
        android:background="@color/fafafa"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>
     <TextView
         android:paddingRight="@dimen/dp_15"
         android:id="@+id/txt_subtotal"
         android:gravity="center|right"
         android:textColor="@color/c3"
         android:text="应付金额:￥148.00"
         android:textSize="@dimen/sp_16"
         android:layout_width="match_parent"
         android:layout_height="@dimen/dp_58"/>
    <LinearLayout
        android:paddingBottom="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:id="@+id/liner_order_msg"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_22"
        android:background="@color/fafafa"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150">
        <TextView
            android:textSize="@dimen/sp_16"
            android:textColor="@color/c3"
            android:text="订单信息:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginRight="@dimen/dp_12"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c9"
                android:text="订单编号:"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_weight="1"
                android:id="@+id/txt_ordernum"
                android:textSize="@dimen/sp_12"
                android:layout_gravity="center"
                android:textColor="@color/c3"
                android:text="100000000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_copy_number"
                android:layout_gravity="center"
                android:text="复制"
                android:textSize="@dimen/sp_12"
                android:gravity="center"
                android:background="@drawable/order_btnitem1"
                android:textColor="@color/ff8282"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_32"/>
        </LinearLayout>
        <LinearLayout
            android:paddingTop="@dimen/sp_15"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginRight="@dimen/dp_12"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c9"
                android:text="创建时间:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_creat_time"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/c3"
                android:text="2017-20-15 15:03:06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>