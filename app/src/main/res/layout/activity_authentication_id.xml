<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">
    <include layout="@layout/include_head_title"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <EditText
        android:layout_marginTop="@dimen/dp_20"
        android:id="@+id/edit_name"
        android:background="@drawable/edit_backshape"
        android:layout_gravity="center"
        android:hint="请输入真实姓名"
        android:gravity="center"
        android:textColor="@color/c9"
        android:textColorHint="@color/c9"
        android:textSize="@dimen/sp_16"
        android:layout_width="@dimen/dp_230"
        android:layout_height="@dimen/dp_40"/>
    <EditText
        android:id="@+id/edit_id"
        android:gravity="center"
        android:textColor="@color/c9"
        android:layout_width="@dimen/dp_230"
        android:background="@drawable/edit_backshape"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_gravity="center"
        android:hint="请输入18位身份证号码"
        android:textSize="@dimen/sp_16"
        android:textColorHint="@color/c9"
        android:layout_height="@dimen/dp_40"/>

    <TextView
        android:textColor="@color/c9"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="left"
        android:textSize="@dimen/sp_10"
        android:text="*请提供信息仅供一直娱审核使用"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">
        <ImageView
            android:background="@drawable/idcard_b"
            android:id="@+id/image_z"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/dp_230"
            android:layout_height="@dimen/dp_160"/>

        <ImageView
            android:id="@+id/image_onclick_z"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:src="@mipmap/icon_camera_id_z_yzy"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_15"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:background="@drawable/idcard_b"
            android:id="@+id/image_f"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/dp_230"
            android:layout_height="@dimen/dp_160"/>
        <ImageView
            android:id="@+id/image_onclick_f"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_camera_id_f_yzy"/>


    </RelativeLayout>
    <TextView
        android:textColor="@color/c9"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center|left"
        android:text="*照片要求"
        android:textSize="@dimen/sp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="@color/c9"
        android:gravity="center|left"
        android:text="1.身份证号必须清晰可见"
        android:textSize="@dimen/sp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="@color/c9"
        android:gravity="center|left"
        android:text="2.脸部需要清晰可辨"
        android:textSize="@dimen/sp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <TextView
        android:id="@+id/txt_go"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/f3ac7c9"
        android:gravity="center"
        android:textSize="@dimen/sp_18"
        android:text="@string/determine"
        android:textColor="@color/white" />

</LinearLayout>