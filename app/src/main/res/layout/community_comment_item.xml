<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:padding="@dimen/dp_10"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <ImageView
            android:id="@+id/iamge_portrait"
            android:src="@mipmap/default_bj"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_8"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_nick_name"
                android:layout_marginBottom="@dimen/dp_8"
                android:textColor="#161515"
                android:text="虚拟小号"
                android:textSize="@dimen/sp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/c9"
                android:textSize="@dimen/sp_12"
                android:id="@+id/txt_release_time"
                android:text="123465"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <ImageView
            android:visibility="gone"
            android:src="@mipmap/icon_attention_add_yzy"
            android:id="@+id/iamge_like"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_16"
            android:layout_gravity="center"/>
    </LinearLayout>

    <TextView
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_15"
        android:text=""
        android:textColor="@color/c3"
        android:textSize="@dimen/sp_16"
        android:id="@+id/txt_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <!-- 不同的地方 -->
    <ViewStub
        android:id="@+id/viewStub"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    //底部
    <include
         android:id="@+id/comment_bottom"
         layout="@layout/include_moments_bottom"/>
    <TextView
        android:layout_marginTop="@dimen/dp_10"
        android:layout_gravity="right"
        android:drawablePadding="@dimen/dp_5"
        android:drawableLeft="@mipmap/icon_zan_yzy"
        android:id="@+id/txt_good_lick"
        android:textColor="@color/c3"
        android:text="1516"
        android:gravity="center"
        android:textSize="@dimen/sp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>