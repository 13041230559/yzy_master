<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">
    <include layout="@layout/include_head_title"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:scaleType="fitXY"
                android:id="@+id/login_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_210"
                android:layout_gravity="center"
                android:src="@mipmap/login_logo" />
            <LinearLayout
                android:layout_marginRight="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_40"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:visibility="gone"
                    android:id="@+id/view_isphoneregister"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_23"/>

                <LinearLayout
                    android:visibility="invisible"
                    android:id="@+id/liner_countrycode"
                    android:layout_marginTop="@dimen/dp_20"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40">
                    <TextView
                        android:id="@+id/txt_countrycode"
                        android:layout_gravity="center"
                        android:text="中国大陆+86"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/c3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginLeft="@dimen/dp_22"
                        android:layout_gravity="center"
                        android:src="@mipmap/icon_back_right_black_yzy"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/liner_user"
                    android:background="@drawable/edit_backshape"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iamge_user"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginLeft="@dimen/dp_22"
                        android:layout_gravity="center"
                        android:src="@mipmap/icon_log_me_yzy"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"/>
                    <EditText
                        android:layout_weight="1"
                        android:id="@+id/edit_name"
                        android:layout_marginRight="@dimen/dp_22"
                        android:layout_gravity="center"
                        android:text=""
                        android:textColorHint="@color/g6"
                        android:hint="请输入账号"
                        android:textSize="@dimen/sp_14"
                        android:background="@null"
                        android:textColor="@color/txtcolor"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_40"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line_password"
                    android:layout_marginTop="@dimen/dp_8"
                    android:background="@drawable/edit_backshape"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginLeft="@dimen/dp_22"
                        android:layout_gravity="center"
                        android:src="@mipmap/icon_log_lock_yzy"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"/>
                    <EditText
                        android:layout_weight="1"
                        android:id="@+id/edit_pass"
                        android:layout_gravity="center"
                        android:text=""
                        android:inputType="textPassword"
                        android:textColorHint="@color/g6"
                        android:hint="请输入6-20位密码"
                        android:textSize="@dimen/sp_14"
                        android:background="@null"
                        android:textColor="@color/c6"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_40"/>
                    <ImageView
                        android:id="@+id/select_pass"
                        android:paddingRight="@dimen/dp_15"
                        android:paddingLeft="@dimen/dp_22"
                        android:layout_gravity="center"
                        android:src="@mipmap/icon_eye_yzy"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/liner_code"
                    android:layout_marginTop="@dimen/dp_8"
                    android:background="@drawable/edit_backshape"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginLeft="@dimen/dp_22"
                        android:layout_gravity="center"
                        android:src="@mipmap/icon_log_text_yzy"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"/>
                    <EditText
                        android:layout_weight="1"
                        android:id="@+id/edit_code"
                        android:layout_gravity="center"
                        android:text=""
                        android:inputType="number"
                        android:textColorHint="@color/g6"
                        android:hint="@string/pleasecode"
                        android:textSize="@dimen/sp_14"
                        android:background="@null"
                        android:textColor="@color/txtcolor"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_40"/>

                    <TextView
                        android:id="@+id/txt_code"
                        android:background="@drawable/code_backround"
                        android:textColor="@color/white"
                        android:text="获取验证码"
                        android:textColorHint="@color/black"
                        android:gravity="center"
                        android:textSize="@dimen/sp_12"
                        android:layout_gravity="center"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="match_parent"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!--  <TextView
                          android:id="@+id/txt_forgotpass"
                          android:text="@string/forgotpassword"
                          android:textSize="@dimen/sp_12"
                          android:textColor="@color/c6"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"/>-->
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txt_forgetpass"
                        android:text="@string/forgotpassword"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/fc4f4f"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <Button
                    android:background="@drawable/loginbtn_shape"
                    android:id="@+id/login_btn"
                    android:text="@string/login"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_18"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44" />

                <TextView
                    android:id="@+id/txt_noid"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_gravity="center"
                    android:text="@string/noid"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/c6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <android.support.v7.widget.RecyclerView
                    android:layout_marginTop="@dimen/dp_20"
                    android:id="@+id/recyclerView_share"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>