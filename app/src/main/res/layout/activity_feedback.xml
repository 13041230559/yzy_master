<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/white"
              android:layout_height="match_parent">
    <include layout="@layout/include_head_title"/>
    <android.support.v4.widget.NestedScrollView
        android:padding="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/edit_content"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_180"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/fafafa"
                    android:gravity="top"
                    android:hint="意见反馈：有什么好的想法或者建议提供给小娱哦，感谢一直陪伴小娱成长的小仙女们，你们的建议是我们成长最大的动力哦！
"
                    android:maxLength="200"
                    android:textColor="@color/c9"
                    android:textColorHint="@color/c9"/>

                <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txt_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/mian_color"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="14dp"
                        android:layout_marginEnd="11dp"
                        android:text="/200"
                        android:textColor="@color/black"/>
                </LinearLayout>

            </RelativeLayout>
            <TextView
                android:gravity="center|left"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/c3"
                android:text="联系方式"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"/>

            <EditText
                android:paddingBottom="@dimen/dp_5"
                android:paddingTop="@dimen/dp_5"
                android:paddingRight="@dimen/dp_22"
                android:paddingLeft="@dimen/dp_22"
                android:textColor="@color/c9"
                android:hint="请留下手机号或者qq哦!"
                android:textColorHint="@color/c9"
                android:id="@+id/edit_contact"
                android:background="@drawable/ed_backg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_36"/>
            <TextView
                android:gravity="center|left"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/c3"
                android:text="上传图片"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/iamge_recycler"
                android:layout_width="match_parent"
                android:layout_height="100dp"/>
            <TextView
                android:textColor="@color/c9"
                android:text="为了更好的反馈意见,你可以上传3张图片(5MB)"
                android:layout_marginTop="@dimen/dp_15"
                android:textSize="@dimen/sp_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>