<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tl="http://schemas.android.com/apk/res-auto"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <View
        android:id="@+id/tile_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <include layout="@layout/include_head_title" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54">
        <com.flyco.tablayout.SegmentTabLayout
            android:id="@+id/tab_layout"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            tl:tl_textsize="@dimen/sp_14"
            tl:tl_bar_color="#ff8282"
            tl:tl_indicator_anim_enable="true"
            tl:tl_indicator_color="#ffff"
            tl:tl_textSelectColor="#ff8282"
            tl:tl_indicator_margin_bottom="2dp"
            tl:tl_indicator_margin_left="2dp"
            tl:tl_indicator_margin_right="2dp"
            tl:tl_indicator_margin_top="2dp"
            tl:tl_textBold="SELECT"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.view.ViewPager
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/view_page"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/icon_yu_add_add_yzy"
            app:backgroundTint="@color/violet"
            app:borderWidth="0dp"
            app:elevation="@dimen/activity_horizontal_margin"
            app:fabSize="mini"
            app:useCompatPadding="true"/>

    </RelativeLayout>

</LinearLayout>