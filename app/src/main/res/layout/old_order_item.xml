<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:paddingTop="@dimen/dp_15"
              android:paddingLeft="@dimen/dp_10"
              android:padding="@dimen/dp_10"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_40">
  <ImageView
      android:id="@+id/iamge_s_logo"
      android:layout_gravity="center"
      android:layout_width="@dimen/dp_30"
      android:layout_height="@dimen/dp_30"/>
   <TextView
       android:visibility="invisible"
       android:layout_marginLeft="@dimen/dp_5"
       android:layout_gravity="center"
       android:text="娱官方"
       android:id="@+id/txt_s_name"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>
    <View
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>
    <TextView
        android:layout_gravity="center"
        android:text=""
        android:textColor="@color/fc4f4f"
        android:id="@+id/txt_s_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:paddingRight="@dimen/dp_15"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iamge_mainfigure"
                android:src="@mipmap/default_bg"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"/>

            <LinearLayout android:orientation="vertical"
                          android:paddingLeft="@dimen/dp_15"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">
                <TextView
                    android:layout_marginBottom="@dimen/dp_16"
                    android:id="@+id/txt_title"
                    android:textSize="@dimen/sp_14"
                    android:text="EX0"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@color/c3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout android:orientation="horizontal"
                              android:layout_width="match_parent"
                              android:layout_height="match_parent">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txt_attribute"
                            android:textSize="@dimen/sp_12"
                            android:text="EX0 "
                            android:singleLine="false"
                            android:textColor="@color/c9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:visibility="gone"
                            android:layout_marginTop="@dimen/dp_15"
                            android:id="@+id/txt_un_opened"
                            android:textSize="@dimen/sp_12"
                            android:text="请按时支付尾款 以免定金失效"
                            android:singleLine="false"
                            android:textColor="@color/fc4f4f"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout android:orientation="vertical"
                                  android:layout_weight="1"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_gravity="right"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:visibility="gone"
                                android:id="@+id/txt_original_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginTop="@dimen/dp_8"
                                android:gravity="center|right"
                                android:text="￥10000.00"
                                android:textColor="#ababab"
                                android:textSize="12sp"/>
                            <TextView
                                android:id="@+id/txt_discount_price"
                                android:textSize="12sp"
                                android:layout_gravity="right"
                                android:gravity="center|right"
                                android:textColor="@color/c3"
                                android:text="￥10000.00"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/txt_buy_number"
                                android:layout_marginTop="@dimen/dp_8"
                                android:textSize="12sp"
                                android:layout_gravity="right"
                                android:gravity="center|right"
                                android:textColor="#ababab"
                                android:text="x1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <View
            android:background="@color/fafafa"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"/>

        <LinearLayout
            android:id="@+id/liner_total"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_15"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44">
            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:id="@+id/txt_subtotal"
                android:gravity="center|right"
                android:textColor="@color/c3"
                android:text="合 计:￥145"
                android:textSize="@dimen/sp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:id="@+id/txt_freight"
                android:gravity="center|right"
                android:textColor="@color/c9"
                android:text="(不含运费)"
                android:textSize="@dimen/sp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:id="@+id/txt_shop_number"
                android:gravity="center|right"
                android:textColor="@color/c3"
                android:text="共1件商品"
                android:textSize="@dimen/sp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:paddingLeft="@dimen/dp_15"
            android:id="@+id/liner_orderset"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">
            <View
                android:id="@+id/view"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_logistics"
                android:layout_gravity="center"
                android:text="查看物流"
                android:background="@drawable/order_btnitem1"
                android:gravity="center"
                android:textColor="@color/ff8282"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_32"/>


            <!-- <TextView
                 android:id="@+id/txt_remind"
                 android:layout_marginRight="@dimen/dp_15"
                 android:layout_gravity="center"
                 android:text="提醒发货"
                 android:background="@drawable/order_btnitem"
                 android:gravity="center"
                 android:textColor="@color/c3"
                 android:layout_width="wrap_content"
                 android:layout_height="@dimen/dp_32"/>-->

        </LinearLayout>
    </LinearLayout>
</LinearLayout>