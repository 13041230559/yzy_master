<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_306"
    android:id="@id/ss_header"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@id/ss_zoom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/me_bj"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_gravity="right"
            android:id="@+id/txt_certification"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="@dimen/dp_35"
            android:background="@drawable/rz_backg"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:text="@string/apply_for_certification"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"/>
        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@mipmap/default_bg"
                android:padding="@dimen/dp_0.5"
                android:id="@+id/iamge_head"
                android:layout_width="@dimen/dp_88"
                android:layout_height="@dimen/dp_88"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                />

            <ImageView
                android:visibility="gone"
                android:layout_marginBottom="@dimen/dp_10"
                android:id="@+id/iamge_grade"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_alignBottom="@+id/iamge_head"
                android:layout_alignEnd="@+id/iamge_head"
                android:src="@mipmap/v4"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:visibility="gone"
                android:layout_gravity="center"
                android:id="@+id/txt_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/loginbtn_shape"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_2"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:paddingTop="@dimen/dp_2"
                android:text="点击登录"
                android:textSize="@dimen/dp_14"/>
            <LinearLayout
                android:id="@+id/liner_login_show"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iamge_head"
                        android:layout_gravity="center"
                        android:drawablePadding="@dimen/dp_5"
                        android:gravity="center"
                        android:shadowRadius="3"
                        android:text=""
                        android:textColor="#ffffff"
                        android:textSize="@dimen/sp_16"/>

                <TextView
                    android:id="@+id/txt_userid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_name"
                    android:layout_marginTop="@dimen/dp_4"
                    android:background="@drawable/rz_backg"
                    android:paddingBottom="@dimen/dp_2"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_2"
                     android:text=""
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp_12"/>
            </LinearLayout>
            <TextView
                android:layout_gravity="center"
                android:id="@+id/txt_please_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_4"
                android:background="@drawable/rz_backg_please"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_2"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="@dimen/dp_2"
                android:shadowRadius="3"
                android:text="点击登录"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_12"/>
            <TextView
                android:visibility="gone"
                android:layout_gravity="center"
                android:id="@+id/txt_my_follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/rz_backg_please"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_2"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="@dimen/dp_2"
                android:shadowRadius="3"
                android:text="我的关注"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_12"/>


        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:visibility="invisible"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
        android:id="@+id/ll_action_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true"
        android:background="#33333300"
        android:divider="@mipmap/ic_img_line_v"
        android:dividerPadding="1dp"
        android:showDividers="middle">
        <LinearLayout
            android:id="@+id/liner_my_fans"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
