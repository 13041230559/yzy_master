<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:paddingTop="@dimen/dp_16">
    <ImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45"
        android:scaleType="centerCrop"
        tools:src="@mipmap/app_fango_20170630_homer_01"/>

    <TextView
        android:id="@+id/nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/avatar"
        android:textColor="@color/c3"
        android:textSize="@dimen/sp_11"
        android:textStyle="bold"
        tools:text="JOEKR.WANG"/>

    <TextView
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/nick_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nick"
        android:layout_below="@+id/nick"
        android:textColor="@color/c9"
        android:textSize="@dimen/sp_11"
        tools:text="2017-5-1 11:11:11"/>

    <ImageView
        android:id="@+id/iamge_like"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_18"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/nick"
        android:layout_gravity="center"
        android:src="@mipmap/icon_like_like"/>
</RelativeLayout>