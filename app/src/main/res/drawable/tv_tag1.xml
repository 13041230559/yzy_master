<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape>
            <corners android:radius="25dp" />
            <padding android:top="@dimen/dp_5" android:bottom="@dimen/dp_5" android:left="@dimen/dp_10" android:right="@dimen/dp_10" />
            <solid android:color="@color/gray" />
            <stroke android:color="@color/gray" android:width="1dp"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <padding android:top="@dimen/dp_5" android:bottom="@dimen/dp_5" android:left="@dimen/dp_10" android:right="@dimen/dp_10" />
            <corners android:radius="25dp" />
            <solid android:color="@color/mian_color" />
            <stroke android:color="@color/mian_color" android:width="1dp"/>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape>
            <padding android:top="@dimen/dp_5" android:bottom="@dimen/dp_5" android:left="@dimen/dp_10" android:right="@dimen/dp_10" />
            <corners android:radius="25dp" />
            <solid android:color="@color/grayd" />
            <stroke android:color="@color/grayd" android:width="1dp"/>
        </shape>
    </item>
</selector>