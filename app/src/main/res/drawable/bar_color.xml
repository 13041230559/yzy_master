<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:id="@android:id/background" >
        <shape>
            <corners android:radius="5dp" />
            <solid android:color="#ffffff"></solid>
        </shape>
        <stroke
            android:width="1dp"
            android:color="@color/b1b1b1"
            />
    </item>

    <item  android:id="@android:id/progress" >
        <clip>
            <shape>
                <corners android:radius="5dp" />
      <solid android:color="@color/fc4f4f"></solid>
                <padding android:right="@dimen/dp_5" android:left="@dimen/dp_5" android:bottom="@dimen/dp_5" android:top="@dimen/dp_5"></padding>
                <stroke
                    android:width="1dp"
                    android:color="@color/gray"
                    />
            </shape>
        </clip>
    </item>




